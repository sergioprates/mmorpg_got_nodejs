<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% for(var i=0; i < acoes.length;i++) { %>
			<% 
			var acao = '';
			switch(acoes[i].acao){
				case '1': acao = 'aldeão(ões) coletando recursos'; break;
				case '2': acao = 'enforcamento(s) programado';break;
				case '3': acao = 'aldeão(ões) em treinamento de história';break;
				case '4': acao = 'aldeão(ões) em treinamento de magia';break;
			}
			var segundos_restantes = (acoes[i].acao_termina_em - new Date().getTime()) / 1000;
			%>
			<li><%= acoes[i].quantidade %> <%= acao %> - <small>restam <span class="tempo_restante"><%= parseInt(segundos_restantes) %></span> segundos - <a href="/revogar_acao?id_acao=<%= acoes[i]._id%>">revogar ordem</a></small></li>
		<% } %>
	</ul>
</div>
